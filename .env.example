# Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
SCRY_LOG_LEVEL=INFO
SCRY_ENV=development

# AWS Configuration
SCRY_AWS__REGION=us-east-1
SCRY_AWS__ACCESS_KEY_ID=your_access_key
SCRY_AWS__SECRET_ACCESS_KEY=your_secret_key
SCRY_AWS__S3_BUCKET=your-bucket-name

# Database Configuration
SCRY_DB__HOST=localhost
SCRY_DB__PORT=5432
SCRY_DB__NAME=scry_ingestor
SCRY_DB__USER=scry
SCRY_DB__PASSWORD=your_db_password

# Redis/Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Configuration
SCRY_API__HOST=0.0.0.0
SCRY_API__PORT=8000
SCRY_API__KEY=your_api_key_here

# Processing Configuration
SCRY_PROCESSING__USE_CLOUD=false
SCRY_PROCESSING__MAX_WORKERS=4
SCRY_PROCESSING__TIMEOUT_SECONDS=300
